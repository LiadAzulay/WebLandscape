
<%include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center">Edit <%= landscape.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
    <form action="/landscapes/<%= landscape._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="landscape[name]" value="<%= landscape.name %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="landscape[image]" value="<%= landscape.image %>">
        </div>
        
         <div class="form-group">
            <input class="form-control" type="text" name="landscape[description]" value="<%= landscape.description %>" >
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/landscapes">go back</a>
</div>

</div>
</div>
<%include ../partials/footer %>